{
  "name": "@guardian-network/signgen",
  "version": "1.0.1",
  "author": "Priadko",
  "license": "proprietary",
  "description": "EIP712 signatures infrastructure CLI tool",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "gen": "./dist/src/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "@guardian-network:registry": "https://gitlab.com/api/v4/projects/46281608/packages/npm/"
  },
  "scripts": {
    "build": "tsc && pnpm format:fix",
    "build:dev": "tsc",
    "watch": "nodemon ./src/index.ts",
    "clear": "pnpm remove:output",
    "remove:output": "rimraf output",
    "test": "npx hardhat test",
    "test:trace": "npx hardhat test --trace",
    "test:internal": "cross-env OUTPUT_TESTS_PATH=output/tests OUTPUT_ARTIFACTS_PATH=output/artifacts OUTPUT_CACHE_PATH=output/cache pnpm test:trace",
    "test:prune": "pnpm clear && pnpm cli -c -s",
    "test:e2e": "ts-node ./e2e/index.ts",
    "test:unit": "mocha --recursive --bail",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test:unit",
    "cli": "ts-node src/index.ts",
    "compile": "npx hardhat compile",
    "version": "pnpm version"
  },
  "keywords": [],
  "dependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "^4.9.0",
    "@solidity-parser/parser": "^0.16.0",
    "commander": "^10.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ethers": "5.7.2",
    "hardhat": "^2.14.0",
    "hardhat-tracer": "^2.3.2",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^5.0.1",
    "shortid": "^2.2.16",
    "signtypeddata-v5": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.3",
    "@types/shortid": "^0.0.29",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0"
  }
}
